{
	"compilerOptions": {
		"target": "es2019",
		"module": "commonjs",
		"moduleResolution": "node",
		"rootDir": "src",
		"outDir": "build",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
      "resolveJsonModule": true,
		"lib": [ "es2019" ]
	},
	"include": [
		"src/**/*.ts"
	]
}
